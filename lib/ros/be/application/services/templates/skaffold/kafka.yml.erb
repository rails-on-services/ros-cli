---
apiVersion: <%= @service.skaffold_version %>
kind: Config
deploy:
  helm:
    releases:
      - name: kafka
        chartPath: incubator/kafka
        remote: true
        overrides:
          imageTag: 5.3.0
          replicas: 1
          fullnameOverride: kafka
          podLabels:
            app.kubernetes.io/name: kafka
          resources:
            limits:
              cpu: 200m
              memory: 1536Mi
            requests:
              cpu: 100m
              memory: 1024Mi
          prometheus:
            jmx:
              enabled: false
            kafka:
              enabled: false
          persistence:
            enabled: true
            size: 50Gi
          zookeeper:
            enabled: false
            url: "kafka-zookeeper"
