---
apiVersion: skaffold/v1beta11
kind: Config
deploy:
  helm:
    releases:
      - name: redis
        chartPath: stable/redis
        remote: true
        overrides:
          master:
            podLabels:
              app.kubernetes.io/name: <%= @service.name %>
              app.kubernetes.io/component: database
              app.kubernetes.io/part-of: application-services
          usePassword: false
          metrics:
            enabled: true
          cluster:
            enabled: false
          resources:
            limits:
              cpu: 1
              memory: 1Gi
            requests:
              cpu: 0.2
              memory: 0.8Gi
